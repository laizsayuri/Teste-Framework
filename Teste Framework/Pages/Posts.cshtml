@page
@model PostsModel
@{
    ViewData["Title"] = "Posts";
}

<div class="mb-4">
    <table id="posts-table" class="table table-responsive">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Título</th>
                <th scope="col">Conteúdo</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var Post in Model.Posts)
            {
                <tr>
                    <th scope="row">@Post.Id</th>
                    <td>@Post.Titulo</td>
                    <td>@Post.Conteudo</td>
                </tr>
            }

        </tbody>
    </table>
</div>


@section Scripts{
    <script>
        $(document).ready(function () {
            $('#posts-table').DataTable({
                "language": {
                    "emptyTable": "Não há dados disponíveis",
                    "info": "Exibindo _START_ de _END_ de _TOTAL_ resultados",
                    "lengthMenu": "Exibir _MENU_ resultados",
                    "search": "Procurar:",
                    "paginate": {
                        "first": "Primeiro",
                        "last": "Último",
                        "next": "Próximo",
                        "previous": "Anterior"
                    },
                    "aria": {
                        "sortAscending": ": ative para ordenar a coluna de forma ascendente",
                        "sortDescending": ": ative para ordenar a coluna de forma descendente"
                    },
                    "loadingRecords": "Carregando...",
                    "processing": "Processando...",
                    "infoEmpty": "Exibindo 0 de 0 de 0 resultados",
                    "zeroRecords": "Sem resultados para essa busca",
                }
            });
        });
    </script>
}
